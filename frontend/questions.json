            "example": "Professional Music Learning for All",
            "required": true,
            "exclude": false,
            "skip": false,
            "rules": {
              "minLength": 3,
              "maxLength": 60,
              "pattern": "^[A-Za-z0-9 ,.'-]{3,60}$",
              "patternMessage": "Use simple English text with basic punctuation only."
            }
          },
          {
            "id": "hero_subtitle",
            "type": "text",
            "label": "What supporting line should appear under the headline?",
